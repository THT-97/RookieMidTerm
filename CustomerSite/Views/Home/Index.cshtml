@{
    ViewData["Title"] = "Home Page";
    List<Category> categories = ViewBag.categories;
    List<Product> products = ViewBag.products;
    List<Product> newProducts = ViewBag.newProducts;
}
<div class="col-2 p-3" style="background-color:lightgray">
    <div class="p-0" style="position: sticky; top: 3em;">
        <!--Dropdown menu for Categories-->
        @if (categories != null && categories.Count > 0)
        {
            <div class="dropdown p-0">
                <button class="btn btn-light dropdown-toggle" type="button" id="dropdownBtn" data-bs-toggle="dropdown" aria-expanded="false">
                    CATEGORIES
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownBtn">
                    @foreach (Category category in categories)
                    {
                        <li><a class="dropdown-item" href="#"><h6>@category.Name</h6></a></li>
                    }
                </ul>
            </div>
        }
        <hr />
        <div class="navbar">BRUH</div>
    </div>
</div>
<div class="text-center col-10">
    <div class="row">
        @if (newProducts != null && newProducts.Count > 0)
        {
            <h4>New products</h4>
            <div class="row">
                @foreach (Product product in newProducts)
                {
                    if (product.Status == 1)
                    {
                        <partial name="../Product/ProductPartialView" for="@product" />
                    }
                }
            </div>
            <hr />
        }

        @if (products != null && products.Count > 0)
        {
            <h4>All products</h4>
            <div class="row">
                @foreach (Product product in products)
                {
                    if (product.Status == 1)
                    {
                        <partial name="../Product/ProductPartialView" for="@product" />
                    }
                }
            </div>
            <hr />
        }
    </div>
    
</div>
