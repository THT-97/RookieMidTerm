<div className="text-center p-5">
    <h1 class="mt-5 pt-5 text-center">SIGN IN</h1>
    <hr />
    <form asp-action="SignIn" method="post" class="form d-flex justify-content-center p-3">
        <table class="w-25">
            <tbody>
                <tr>
                    <td><b>Username</b></td>
                    <td>
                        <input required class="input form-control"  type="text" name="name" placeholder="Username..." />
                    </td>
                </tr>
                <tr>
                    <td><b>Password</b></td>
                    <td>
                        <input required class="input form-control" type="password" name="password" placeholder="Password..." />
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td class="d-flex justify-content-end">
                        <button class="btn btn-primary" type="submit">
                            Sign in
                        </button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>
