@{
    string prevPage = Context.Request.Headers["Referer"].ToString();
}

<div className="text-center p-5">
    <h1 class="mt-5 pt-5 text-center">SIGN IN</h1>
    <hr />
    <form asp-action="SignIn" method="post" asp-route-prevPage="@prevPage" class="form d-flex justify-content-center">
        <div class=" d-flex justify-content-center h-100 w-50 p-3" style="background-color:lightgray">
            <table class="h-50">
                <tbody>
                    <tr>
                        <td><b>Username</b></td>
                        <td>
                            <input required class="input form-control" type="text" name="name" placeholder="Username..." />
                        </td>
                    </tr>
                    <tr>
                        <td><b>Password</b></td>
                        <td>
                            <input required class="input form-control" type="password" name="password" placeholder="Password..." />
                        </td>
                    </tr>
                    <tr>
                        <td></td>
                        <td class="d-flex justify-content-end">
                            <button class="btn btn-primary" type="submit">
                                Sign in
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </form>
</div>
